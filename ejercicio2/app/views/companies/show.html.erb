<h1>employees</h1>


<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @company.name %>

</p>
<%= link_to 'Edit', company_path(@company) %> |
<%= link_to 'Back', company_path %>

<%= form_with(model: [ @company, @employee ]) do |form| %>
  <div class="field">
    <%= form.label :first_name %>
    <%= form.text_field :first_name %>
  </div>
  <div class="field">
  <%= form.label :last_name %>
  <%= form.text_field :last_name %>
  </div>
  <div class="field">
  <%= form.label :email %>
  <%= form.email_field :email %>
  </div>
  <div class="field">
  <%= form.label :area %>
  <%= form.select :area_id, Area.pluck(:name, :id) %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>

<% end %>

<p id="notice"><%= notice %></p>


<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @employees.each do |x| %>
      <tr>
        <td><%= x.first_name %></td>
        <td><%= x.last_name %></td>
        <td><%= x.email %></td>
        <td><%= x.area.name %></td>
        <td><%= link_to 'Destroy', company_employee_path(@company, x), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
